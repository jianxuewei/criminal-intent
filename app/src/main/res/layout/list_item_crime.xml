<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crime_list_item_solved_checkbox"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:focusable="false"
        android:enabled="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_solved_checkbox"
        android:paddingLeft="4dp"
        android:textStyle="bold"
        android:text="crime title"
        android:id="@+id/crime_list_item_title_textview"/>
    <TextView
        android:id="@+id/crime_list_item_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/crime_list_item_solved_checkbox"
        android:layout_below="@id/crime_list_item_title_textview"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:text="crime date"/>

</RelativeLayout>